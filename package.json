{
    "name": "stylelint-rule-creator",
    "version": "4.0.9",
    "description": "Create custom stylelint rules with less boilerplate.",
    "keywords": [
        "stylelint",
        "jest",
        "test",
        "rule",
        "create",
        "lint",
        "css",
        "less",
        "scss",
        "sass",
        "style",
        "boilerplate"
    ],
    "homepage": "https://github.com/electrovir/stylelint-rule-creator#readme",
    "bugs": {
        "url": "https://github.com/electrovir/stylelint-rule-creator/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/electrovir/stylelint-rule-creator.git"
    },
    "license": "MIT",
    "author": "electrovir (github.com/electrovir)",
    "main": "dist/index.js",
    "scripts": {
        "prepublishOnly": "rm -rf node_modules; npm install && npm run test",
        "spellcheck": "virmator spellcheck --extendable-config",
        "test": "rm -rf dist; tsc && jest",
        "test:full": "npm run spellcheck && npm run format check && npm test",
        "format": "virmator format"
    },
    "dependencies": {
        "glob-to-regexp": "^0.4.1",
        "stylelint-jest-rule-tester": "^2.1.2"
    },
    "devDependencies": {
        "@types/glob-to-regexp": "^0.4.1",
        "@types/jest": "^27.0.1",
        "@types/stylelint": "^13.13.2",
        "jest": "^27.1.1",
        "stylelint": "^13.13.1",
        "virmator": "^1.1.10"
    },
    "peerDependencies": {
        "stylelint": "^13.13.1"
    }
}
